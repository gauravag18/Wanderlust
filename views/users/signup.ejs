<% layout("/layouts/boilerplate") -%>
<div class="row mt-3">
    <h1 class="col-6 offset-3">Signup on Wanderlust</h1>
    <div class="col-6 offset-3">
        <form action="/signup" method="POST" class="needs-validation" novalidate>
            <div class="mb-3">
                <table for="username" class="form-label">Username</table>
                <input name="username" id="username" type="text" class="form-control" required>
            </div>
            <div class="mb-3">
                <table for="email" class="form-label">Email-ID</table>
                <input name="email" id="email" type="text" class="form-control" required>
            </div>
            <div class="mb-3">
                <table for="password" class="form-label">Password</table>
                <input name="password" id="password" type="password" class="form-control" required>
            </div>
            <button clas="btn btn-success">SignUp</button>
        </form>
    </div>
</div>
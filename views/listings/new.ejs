<% layout("/layouts/boilerplate") -%>
<body>
    <h3>Create New Listing </h3>
    <br>
    <div class="row mt-3">
        <div class="col-8 offset-2">
        <form method="POST" action="/listings" novalidate class="needs-validation">
            <div class="mb-3">
                <table for="title" class="form-label">Title</table>
                <input name="listing[title]" type="text" class="form-control" required>
                <div class="valid-feedback">Title Added</div>
            </div>
            <div class="mb-3">
                <table for="description" class="form-label">Description</table>
                <textarea name="listing[description]" type="text" class="form-control" required></textarea>
            </div>
            <div class="mb-3">
                <table for="image" class="form-label">Image Link</table>
                <input name="listing[image]" placeholder="Enter Image URL / Link" "text" class="form-control">
            </div>
            <div class="mb-3">
                <table for="price" class="form-label" >Price</table>
                <input name="listing[price]" type="text" class="form-control" required>
            </div>
            <div class="row">
                <div class="mb-3 col-md-7">
                    <table for="location" class="form-label">Location</table>
                    <input name="listing[location]" type="text" class="form-control" required>
                </div>
                <div class="mb-3 col-md-5">
                    <table for="country" class="form-label">Country</table>
                    <input name="listing[country]" type="text" class="form-control" required>
                </div>
            </div>
            <br>
            <button class="btn btn-dark add-btn mt-3">Add Listing</button>
            <br><br>
        </form>
        </div>
    </div>
</body>